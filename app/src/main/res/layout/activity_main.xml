<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_js"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_send"
            android:contentDescription="et_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@id/et_send"
            android:text="发送" />


        <Button
            android:id="@+id/connect_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_send"
            android:layout_alignTop="@id/btn_send"
            android:layout_marginStart="5dp"
            android:text="连接socket" />
        <Button
            android:id="@+id/btn_send_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/connect_socket"
            android:text="发送指定图片" />

        <Button
            android:id="@+id/btn_query_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@id/btn_send_image"
            android:text="查看联系人" />
        <Button
            android:id="@+id/btn_remove_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/btn_query_contacts"
            android:layout_alignTop="@id/btn_query_contacts"
            android:layout_marginStart="5dp"
            android:text="删除联系人" />
        <Button
            android:id="@+id/btn_send_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/btn_remove_contacts"
            android:layout_alignTop="@id/btn_query_contacts"
            android:layout_marginStart="5dp"
            android:text="发送联系人" />

        <Button
            android:id="@+id/btn_lock_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@id/btn_query_contacts"
            android:text="锁屏/解锁屏幕" />

        <Button
            android:id="@+id/btn_ckbox_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/btn_lock_unlock"
            android:text="CheckBox全选/反选"/>

        <Button
            android:id="@+id/btn_phone_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_ckbox_check"
            android:layout_alignTop="@id/btn_ckbox_check"
            android:layout_marginStart="5dp"
            android:text="静音开/关"/>
        <TextView
            android:id="@+id/find_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/btn_ckbox_check"
            android:gravity="center"
            android:text="findAndClick"
            tools:text="UI查找该控件并输入值" />

        </RelativeLayout>

        <!-- horizontal/vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <!--<RadioGroup-->
                <!--android:layout_width="120dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:orientation="horizontal">-->

                <!--<RadioButton-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp" />-->
                <!--<RadioButton-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp" />-->
                <!--<RadioButton-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp" />-->
                <!--<RadioButton-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp" />-->
            <!--</RadioGroup>-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2000dp" />
    </LinearLayout>
</ScrollView>